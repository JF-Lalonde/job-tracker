<div class="job_form">
  <%= form_for [:company, @job] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %></br>

    <%= f.label :description %>
    <%= f.text_field :description %></br>

    <%= f.label :level_of_interest %>
    <%= f.number_field :level_of_interest %></br>

    <%= f.label :city %>
    <%= f.text_field :city %></br>

    <%= f.label :category %> # Or :category_id?
    <%= f.collection_select(:category_id, Category.all, :id, :title, {prompt: "Select Category"}, {include_blank: true})%></br> #Instead of Category.all, Category.order(:title)?

    <%= f.submit %>
  <% end %>
  <%= link_to "New Category", new_category_path %>
</div>
